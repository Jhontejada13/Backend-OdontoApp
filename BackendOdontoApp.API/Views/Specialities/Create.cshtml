@model BackendOdontoApp.API.Data.Entities.Speciality

@{
    ViewData["Title"] = "Create";
}

<h1 style="color: #C86AF4">Crear</h1>

<h4 style="color: #A7A4A4">Especialidades</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <partial name="_Speciality" />

            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-outline-primary" />
                <a asp-action="Index" class="btn btn-outline-success">Regresar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

